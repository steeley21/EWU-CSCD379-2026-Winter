{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "types": ["@types/node", "vitest/globals"]
  },
  "include": [
    "**/*",
    "components/**/*"
  ],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
